<div class="text-center mt-5">
  <%= form_with url: search_admin_posts_path, local: true, method: :get do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿ID" %>
    <%= form.submit "検索", class: "btn btn-outline-dark" %>
  <% end %>
</div>

<div class='container'>
  <div class="text-center">
    <div class="col-lg-12">
      <table class='table mt-5 mb-5'>
        <thead class="thead-light">
          <tr>
            <th>投稿ID</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= link_to p.id, admin_post_path(p) %></td>
              <td>
                <%= p.customer.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="page-view">
  <%= paginate @posts %>
</div>