<div class='container'>
  <div class="text-center">
    <div class="col-lg-12">
      <table class='table mt-5 mb-5'>
        <thead class="thead-light">
          <tr>
            <th>投稿ID</th>
            <th>投稿者</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= link_to p.id, admin_post_path(p) %></td>
              <td>
                <%= p.customer.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>