<% if @posts.count == 0 %>
 <h5 class="text-center list-group-item-info mb-5">検索結果がありませんでした</h5>
<% end %>

<div class='container'>
  <div class="text-center">
    <div class="col-lg-12">
      <table class='table mt-5 mb-5'>
        <thead class="thead-light">
          <tr>
            <th>投稿ID</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= link_to p.id, admin_post_path(p) %></td>
              <td>
                <%= p.customer.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>