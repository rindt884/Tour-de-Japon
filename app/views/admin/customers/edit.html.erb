<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <%= form_with model: [:admin, @customer], local:true do |f| %>
            <div>
              <%= f.label :ユーザーネーム, class: "col-sm-3 text-center"  %>
              <%= f.text_field :name %>
            </div>
           <div class="mt-3">
              <%= f.label :プロフィール画像, class: "col-sm-3 text-center"  %>
              <%= f.file_field :profile_image %>
            </div>
            <div class="mt-4">
              <h5 class="text-center">自己紹介</h5>
              <%= f.text_area :introduction, rows:'5', class: "w-100" %>
            </div>
            <div class="text-center mt-5">
            <%= f.label :会員ステータス, class: "col-sm-3 text-center"  %>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, :ture %>
            <%= f.label :is_deleted, "退会" %>
            </div>
            <div class="text-center mt-5">
              <%= f.submit "更新", class: "btn btn-outline-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>