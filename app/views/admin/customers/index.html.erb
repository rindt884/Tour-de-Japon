<div class="text-center mt-5">
  <%= form_with url: search_admin_customers_path, local: true, method: :get do |form| %>
    <%= form.text_field :keyword, placeholder: "会員ID" %>
    <%= form.submit "検索", class: "btn btn-outline-dark" %>
  <% end %>
</div>

<div class='container'>
  <div class="text-center">
    <div class="col-lg-12">
      <table class='table mt-5 mb-5'>
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |c| %>
            <tr>
              <td><%= c.id %></td>
              <td><%= link_to c.name, admin_customer_path(c.id) %></td>
              <td><%= c.email %></td>
              <td><%= c.is_deleted ? '退会' : '有効' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="page-view">
  <%= paginate @customers %>
</div>