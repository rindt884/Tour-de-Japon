<div class='container'>
  <div class="text-center">
    <div class="col-lg-12">
      <table class='table mt-5 mb-5'>
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |c| %>
            <tr>
              <td><%= c.id %></td>
              <td>
                <%= link_to c.name, admin_customer_path(c.id) %>
              </td>
              <td><%= c.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>