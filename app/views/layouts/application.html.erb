<!DOCTYPE html>
<html>
  <head>
    <title>Tour-de-Japon</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('cycle.png') %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "アバウト", public_home_about_path, class: 'nav-link text-dark' %>
                </li>
              <% elsif customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to public_home_about_path, class: 'nav-link text-dark', method: :get do %>
                    <i class="fas fa-home"></i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to  public_posts_path, class: 'nav-link text-dark', method: :get do %>
                    <i class="fas fa-bicycle"></i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to favorites_public_customer_path(current_customer), class: 'nav-link text-dark', method: :get do %>
                    <i class="fas fa-heart"></i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_public_post_path, class: 'nav-link text-dark', method: :get do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to public_customer_path(current_customer), class: 'nav-link text-dark', method: :get do %>
                    <i class="fas fa-user"></i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark', method: :get do %>
                    <i class="fas fa-sign-out-alt"></i>
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "アバウト", public_home_about_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "投稿一覧", public_home_index_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <%= yield %>
</body>
</html>
