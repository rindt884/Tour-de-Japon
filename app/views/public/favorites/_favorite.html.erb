<% if post.favorited_by?(current_customer) %>

  <%= link_to public_post_favorites_path(post), method: :delete, remote: true do %>
    <h3><i class="fas fa-heart text-danger"></i></h3>
    <a class="nav-link text-dark"><%= post.favorites.count %> いいね</a>
  <% end %>
  
  <% else %>
  <%= link_to public_post_favorites_path(post), method: :post, remote: true do %>
    <h3><i class="far fa-heart text-danger"></i></h3>
    <a class="nav-link text-dark"><%= post.favorites.count %> いいね</a>
  <% end %>
<% end %>