<%= @customer.name %>
<%= image_tag @customer.get_profile_image(100,100) %>
<%= simple_format(@customer.introduction) %>
<% if @customer == current_customer %>
　<%= link_to "プロフィール編集", edit_public_customer_path(@customer.id) %>
<% else %>
  <% if @customer != current_customer %>
    <% if current_customer.following?(@customer) %>
      <%= link_to "フォロー外す", public_customer_relationships_path(@customer.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", public_customer_relationships_path(@customer.id), method: :post %>
    <% end %>
  <% end %>
<% end %>
フォロー数: <%= link_to @customer.followings.count, public_customer_followings_path(@customer.id) %>
フォロワー数: <%= link_to @customer.followers.count, public_customer_followings_path(@customer.id) %>