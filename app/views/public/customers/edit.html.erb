<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <%= form_with model: [:public, @customer], local:true do |f| %>
            <div>
              <%= f.label :ユーザーネーム, class: "col-sm-3 text-center"  %>
              <%= f.text_field :name %>
            </div>
           <div class="mt-3">
              <%= f.label :プロフィール画像, class: "col-sm-3 text-center"  %>
              <%= f.file_field :profile_image %>
            </div>
            <div class="mt-4">
              <h5 class="text-center">自己紹介</h5>
              <%= f.text_area :introduction, rows:'5', class: "w-100" %>
            </div>
            <div class="text-center mt-3">
              <%= f.submit "更新", class: "btn btn-outline-success" %>
            </div>
            <div class="text-right mt-3">
              <%= link_to "退会", unsubscribe_path, class: "btn btn-outline-dark" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>