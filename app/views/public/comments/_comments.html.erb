<table>
  <tbody>
    <% post.comments.each do |comment| %>
    <tr>
      <td><%= image_tag comment.customer.get_profile_image(50,50), class:"mt-3 rounded-circle"; %></td>
      <td><%= link_to comment.customer.name, public_customer_path(comment.customer.id) %></td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.customer == current_customer %>
        <%= link_to "削除", public_post_comment_path(comment.post,comment), method: :delete, remote: true, class: "btn btn-outline-danger p-0 p-1", style: "font-size: 8px;" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>