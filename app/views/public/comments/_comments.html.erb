<table>
  <tbody>
    <% post.comments.each do |comment| %>
    <tr>
      <td><%= image_tag comment.customer.get_profile_image(50,50), class: "rounded-circle" %></td>
      <td><%= link_to comment.customer.name, public_customer_path(comment.customer.id), class: "text-dark" %></td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.customer == current_customer %>
          <%= link_to "削除", public_post_comment_path(comment.post,comment), method: :delete, remote: true, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-outline-danger p-0 p-1", style: "font-size: 8px;" %>
        <% elsif post.customer == current_customer %>
          <%= link_to "削除", public_post_comment_path(comment.post,comment), method: :delete, remote: true, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-outline-danger p-0 p-1", style: "font-size: 8px;" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>