<% if customer != current_customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー外す", public_customer_relationships_path(customer.id), method: :delete, remote: true %>
  <% else %>
    <%= link_to "フォローする", public_customer_relationships_path(customer.id), method: :post, remote: true %>
  <% end %>
<% end %>
フォロー数: <%= link_to customer.followings.count, public_customer_followings_path(customer.id) %>
フォロワー数: <%= link_to customer.followers.count, public_customer_followers_path(customer.id) %>