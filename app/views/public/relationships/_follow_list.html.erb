<% if customers.exists? %>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% customers.each do |c| %>
          <tr>
            <td><%= image_tag c.get_profile_image(50,50) %></td>
            <td><%= link_to c.name, public_customer_path(c) %></td>
            <td>フォロー数: <%= c.followings.count %></td>
            <td>フォロワー数: <%= c.followers.count %></td>
          </tr>
        <% end %>
      </tbody>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</table>