<% if flash[:alert] %>
 <div class="alert alert-danger" role="alert">
 <p class="notice text-center" style="color:red;"><%= flash[:alert] %></p></div>
<% end %>

<div class="text-center mt-5">
  <%= form_with url: search_public_posts_path, local: true, method: :get do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿検索" %>
    <%= form.collection_select(:prefecture_id, Prefecture.all, :id, :name,{include_blank: "---"} ) %>
    <%= form.submit "検索", class: "btn btn-outline-dark" %>
  <% end %>
</div>
<%= render "public/posts/list", posts: @posts, today: @today, now: @now %>