<div>
  <% @posts.each do |p| %>
  
    <%= image_tag p.customer.get_profile_image(50,50) %>
    
    <%= link_to p.customer.name, public_customer_path(p.customer.id) %><br>
  
    <% if p.images.attached? %>
      <% p.images.each do |image| %>
        <%= image_tag image.variant(resize: '300x300') %>
      <% end %>
    <% end %><br>
    
    <div id="favorite_btn_<%= p.id %>"><%= render "public/favorites/favorite", post: p %></div><br>
  
    <%= p.prefecture.name %><br>
    
    <%= link_to p.title, public_post_path(p.id) %><br>
    
    <% if (@now - p.created_at) <= 60 * 60 %>
      <%=((@now - p.created_at) / 60).to_i.to_s + "分前" %>
    <% elsif (@now - p.created_at) <= 60 * 60 * 24 %>
    　<%=((@now - p.created_at) / 3600).to_i.to_s + "時間前" %>
    <% elsif (@today - p.created_at.to_date) <= 30 %>
    　<%= (@today - p.created_at.to_date).to_i.to_s + "日前" %>
    <% else %>
      <%= p.created_at.strftime('%Y-%m-%d') %> 
    <% end %><br>
    
  <% end %>
</div>