<%= form_with model: @post, url: public_posts_path, method: :post, local: true  do |f| %>

  <%= f.file_field :image, accept: "image/*" %><br>
 
  <%= f.label :name, "地域" %>
  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name,{include_blank: "---"} ) %><br>
  
  <%= f.label :name, "場所" %>
  <%= f.text_field :title %><br>
  
  <%= f.label :name, "記録" %>
  <%= f.text_area :body %><br>
  
  <%= f.label :name, "ライド日" %>
  <%= f.date_field :rideday %><br>

  <%= f.label :name, "走行距離" %>
  <%= f.number_field :mileage, autocomplete: "off", :value =>"0" %>km<br>
  
  <%= f.label :name, "走行時間" %>
  <%= f.time_select :runtime, {default: Date.today + 0.hour} %><br>
  
  <%= f.submit "投稿" %>
<% end %>