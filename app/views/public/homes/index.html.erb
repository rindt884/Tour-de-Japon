<div class="card-list-container py-5">
  <% @posts.each do |p| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
        <% if p.images.attached? %>
          <% p.images.each do |image| %>
            <%= image_tag image, class:"card-img-top"; %>
          <% end %>
        <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= image_tag p.customer.get_profile_image(100,100), class:"mt-3 rounded-circle"; %><br>
            <%= p.customer.name %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <%= p.prefecture.name %>
              <%= p.title %>
            </p>
            <% if (@now - p.created_at) <= 60 * 60 %>
              <%=((@now - p.created_at) / 60).to_i.to_s + "分前" %>
            <% elsif (@now - p.created_at) <= 60 * 60 * 24 %>
            　<%=((@now - p.created_at) / 3600).to_i.to_s + "時間前" %>
            <% elsif (@today - p.created_at.to_date) <= 30 %>
            　<%= (@today - p.created_at.to_date).to_i.to_s + "日前" %>
            <% else %>
              <%= p.created_at.strftime('%Y-%m-%d') %> 
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>